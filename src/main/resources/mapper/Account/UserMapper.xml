<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.shuowen.yuzong.data.mapper.Account.UserMapper">

    <select id="getUserByName" resultType="com.shuowen.yuzong.data.model.Account.UserEntity">
        SELECT * FROM NC.user
        WHERE username = #{username}
    </select>

    <insert id="insertUser" parameterType="com.shuowen.yuzong.data.model.Account.UserEntity">
        INSERT INTO NC.user
        (username, password, authority)
        values (#{username}, #{password}, #{authority})
    </insert>

    <update id="updateUsername" parameterType="com.shuowen.yuzong.data.model.Account.UserEntity">
        UPDATE NC.user
        SET username = #{username}
        WHERE id = #{id}
    </update>

    <update id="updatePassword" parameterType="com.shuowen.yuzong.data.model.Account.UserEntity">
        UPDATE NC.user
        SET password = #{password}
        WHERE id = #{id}
    </update>

</mapper>