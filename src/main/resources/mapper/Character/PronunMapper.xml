<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.shuowen.yuzong.data.mapper.Character.PronunMapper">

    <select id="getAllMandarinInfo" resultType="com.shuowen.yuzong.data.model.Character.MdrChar">
        SELECT * from NC.mdr_char
    </select>


    <select id="getMandarinInfoByScTc" resultType="com.shuowen.yuzong.data.model.Character.MdrChar">
        SELECT mc.info, mc.id AS left_id
        FROM NC.mdr_char mc
        LEFT JOIN NC.${dialect}_char_mdr nm ON nm.m = mc.id
        WHERE mc.hanzi = #{hanzi} OR mc.hanzi = #{hantz}
    </select>

    <select id="selectMandarinByChars" resultType="com.shuowen.yuzong.data.model.Character.DialectChar">
        select info, std_py
        from mdr_char mdr
        RIGHT JOIN NC.${dialect}_char_mdr map ON mdr.id = map.m
        RIGHT JOIN NC.${dialect}_char main ON map.n = main.id
        WHERE info IN
        <foreach collection="list" item="info" open="(" separator="," close=")">
            #{info}
        </foreach>
        GROUP BY m, n
    </select>

    <select id="getMandarinInfoByDialectId" resultType="com.shuowen.yuzong.data.model.Character.MdrChar">
        SELECT map.n left_id, map.m right_id, info
        FROM ${dialect}_char_mdr map
        RIGHT JOIN mdr_char ON map.m = id
        WHERE map.n = #{n};
    </select>

    <select id="getMandarinInfoByMandarinId" resultType="com.shuowen.yuzong.data.model.Character.MdrChar">
        SELECT info
        FROM ${dialect}_char_mdr map
        RIGHT JOIN mdr_char ON map.m = id
        WHERE map.m IN
        <foreach collection="m" item="i" open="(" separator="," close=")">
            #{i}
        </foreach>
    </select>

    <delete id="clearMapByDialectId">
        DELETE FROM ${dialect}_char_mdr WHERE n = #{n}
    </delete>


    <insert id="insertMap">
        INSERT INTO ${dialect}_char_mdr (m, n)
        VALUES
        <foreach collection="data" item="i" separator=",">
            (#{i.left}, #{i.right})
        </foreach>
    </insert>
</mapper>